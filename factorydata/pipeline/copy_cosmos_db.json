{
	"name": "copy_cosmos_db",
	"properties": {
		"activities": [
			{
				"name": "Copy cosmos Db",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "CosmosDbSqlApiSource",
						"preferredRegions": []
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings",
							"copyBehavior": "FlattenHierarchy"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"name": "Countries",
									"type": "String"
								},
								"sink": {
									"type": "String",
									"ordinal": 1
								}
							},
							{
								"source": {
									"name": "Happiness index, 2022",
									"type": "Double"
								},
								"sink": {
									"type": "String",
									"ordinal": 2
								}
							},
							{
								"source": {
									"name": "Global rank",
									"type": "Int16"
								},
								"sink": {
									"type": "String",
									"ordinal": 3
								}
							},
							{
								"source": {
									"name": "Available data",
									"type": "String"
								},
								"sink": {
									"type": "String",
									"ordinal": 4
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "source_CosmosDbNoSqlSales",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "sink_cosnos_sales",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}